<UserControl x:Class="VitalTrack.Views.PanelRoles"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VitalTrack.Views"
             mc:Ignorable="d" 
             d:DesignHeight="600" FontSize="18" Background="AliceBlue" FontWeight="Bold" d:DesignWidth="800" Loaded="UserControl_Loaded">
    <Grid>
        <!-- Estructura global del control -->
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="10*"/>

        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Label Content="Roles" Grid.Column="0" Height="34" Width="90" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,22,0,0"/>
        <ComboBox x:Name="cmbRoles" Width="290" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="100,19,0,0"  Height="44" />

        <Button  x:Name="btnAsignarRol" Content="Asignar rol" Grid.Row="0"  Grid.Column="1" Width="250" HorizontalAlignment="Center"  Margin="0,10,0,10" Click="btnAsignarRol_Click" />

        <Label Content="Lista usuarios:"  Grid.Row="1"  Grid.Column="0" Height="34" Width="167" HorizontalAlignment="Left" VerticalAlignment="Center" />
        <DataGrid Grid.Row="2"  x:Name="gridUsuarios" Grid.ColumnSpan="2" IsReadOnly="True" SelectionMode="Single" AutoGenerateColumns="False" SelectionUnit="FullRow" >
            <DataGrid.Columns>
                <DataGridTextColumn Header="UsuarioId" Binding="{Binding UsuarioId}" Width="*" Visibility="Hidden" />
                <DataGridTextColumn Header="RolId" Binding="{Binding RolId}" Width="*" Visibility="Hidden" />
                <DataGridTextColumn Header="Rol" Binding="{Binding NombreRol}" Width="*"  />
                <DataGridTextColumn Header="Nombre usuario" Binding="{Binding NombreUsuario}" Width="*" />
                <DataGridTextColumn Header="Nombre" Binding="{Binding Nombre}" Width="*"/>
                <DataGridTextColumn Header="Apellidos" Binding="{Binding Apellidos}" Width="2*" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
