<UserControl x:Class="VitalTrack.Views.PanelGraficas"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VitalTrack.Views"
             mc:Ignorable="d" 
                     d:DesignHeight="600" FontSize="18" Background="AliceBlue" FontWeight="Bold" d:DesignWidth="800">
    <Grid>
        <!-- Estructura global del control -->
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="6*"/>
            <RowDefinition Height="6*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Label Content="Biometría de Paciente"  Grid.Column="0" Height="34" Width="248" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0,0,0"/>
        <Label Content="Click sobre gráfica para ver siguiente valor para el paciente"  FontSize="10" Grid.Column="1" Height="23" Width="303" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="87,23,0,0"/>
        <TextBox x:Name="txtFecha" Grid.Row="0" TextWrapping="Wrap" Margin="263,10,0,10" HorizontalAlignment="Left" Width="192" Grid.ColumnSpan="2"  />
        <Canvas x:Name="canvasGrafica" Grid.Row="1" Grid.Column="0"  Margin="10,8,10,10" Grid.ColumnSpan="2" Background="NavajoWhite"/>

        <DataGrid Grid.Row="2" FontSize="12" x:Name="gridPacientes" Grid.ColumnSpan="2" IsReadOnly="True" SelectionMode="Single" AutoGenerateColumns="False" SelectionUnit="FullRow" SelectionChanged="gridPacientes_SelectionChanged" >
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding PacienteId}" Width="*" Visibility="Hidden" />
                <DataGridTextColumn Header="Activo" Binding="{Binding Activo}" Width="*" Visibility="Hidden"/>
                <DataGridTextColumn Header="Seguro" Binding="{Binding Nhc}" Width="*"/>
                <DataGridTextColumn Header="DNI" Binding="{Binding Dni}" Width="*"/>
                <DataGridTextColumn Header="Nombre" Binding="{Binding Nombre}" Width="*"/>
                <DataGridTextColumn Header="Apellidos" Binding="{Binding Apellidos}" Width="3*"/>
                <DataGridTextColumn Header="Sexo" Binding="{Binding Sexo}" Width="*"/>
                <DataGridTextColumn Header="Nacimiento" Binding="{Binding FechaNacimiento}" Width="2*"/>
                <DataGridTextColumn Header="Teléfono" Binding="{Binding Telefono}" Width="2*" Visibility="Hidden"/>
                <DataGridTextColumn Header="Dirección" Binding="{Binding Direccion}" Width="3*" Visibility="Hidden"/>
                <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="*" Visibility="Hidden"/>
                <DataGridTextColumn Header="Observaciones" Binding="{Binding Observaciones}" Width="*" Visibility="Hidden"/>
                <DataGridTextColumn Header="Creación" Binding="{Binding CreadoEn}" Width="*" Visibility="Hidden"/>
                <DataGridTextColumn Header="Creador" Binding="{Binding CreadoPor}" Width="*" Visibility="Hidden"/>
                <DataGridTextColumn Header="Actualizado" Binding="{Binding ActualizadoEn}" Width="*" Visibility="Hidden"/>
                <DataGridTextColumn Header="Actualizador" Binding="{Binding ActualizadoPor}" Width="*" Visibility="Hidden"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
