<Window x:Class="VitalTrack.VentanaUsuario"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VitalTrack"
        mc:Ignorable="d"
        Title="Alta Usuario"
        Height="400" 
        Width="800" 
        WindowStartupLocation="CenterScreen"
        FontSize="18" 
        FontWeight="Bold"
        Background="#ff91C4C3"
        Icon="/Images/icons8-employee-100-3.png" ResizeMode="NoResize" Loaded="Window_Loaded">

    <Grid>
        <!-- Estructura global del control -->
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>

            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="354*"/>
            <ColumnDefinition Width="46*"/>
            <ColumnDefinition Width="97*"/>
            <ColumnDefinition Width="303*"/>
        </Grid.ColumnDefinitions>


        <Label x:Name="lbTitulo" Content="Alta y edición de usuario"  FontSize="26" Grid.Column="0" Height="42" Width="319" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="255,-4,0,0" Grid.ColumnSpan="4"/>

        <Label Content="Usuario" Height="34" Width="94" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0" Grid.Column="2" Grid.Row="1" Grid.ColumnSpan="2"/>
        <TextBox x:Name="txtCuentaUsuario"  FontSize="16"  Grid.Row="1" Grid.Column="3" TextWrapping="Wrap" Margin="26,9,10,9" />

        <Label Content="Contraseña" Height="34" Width="108" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,6,0,0" Grid.Column="2" Grid.Row="2" Grid.ColumnSpan="2"/>
        <PasswordBox x:Name="txtContrasena"  FontSize="16"  Grid.Row="2" Grid.Column="3"  Margin="26,8,10,10" />
        <Label x:Name="lbAviso" Content="Dejar en blanco para no modificar" FontSize="10" Height="34" Width="184" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,30,0,0" Grid.Column="2" Grid.Row="2" Grid.RowSpan="2" Grid.ColumnSpan="2"/>

        <Label Content="Nombre"  Grid.Row="1"  Grid.Column="0" Height="34" Width="105" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0,0,0"/>
        <TextBox x:Name="txtNombreUsuario" FontSize="16"  Grid.Row="1" Grid.Column="0" TextWrapping="Wrap" Margin="98,10,10,10" Grid.ColumnSpan="2" />

        <Label Content="Apellidos"  Grid.Row="2" Grid.Column="0" Height="34" Width="110" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0" />
        <TextBox x:Name="txtApellidosUsuario" FontSize="16"  Grid.Row="2" Grid.Column="0" TextWrapping="Wrap" Margin="98,10,10,10" Grid.ColumnSpan="2" />

        <Label Content="Teléfono"  Grid.Row="3"  Grid.Column="0" Height="34" Width="110" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0" />
        <TextBox x:Name="txtTelefonoUsuario" FontSize="16"  Grid.Row="3" Grid.Column="0" TextWrapping="Wrap" Margin="98,10,10,10" Grid.ColumnSpan="2" />

        <Label Content="Email"  Grid.Row="4"  Grid.Column="0" Height="34" Width="110" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0" />
        <TextBox x:Name="txtEmailUsuario" FontSize="16"  Grid.Row="4" Grid.Column="0" TextWrapping="Wrap" Margin="98,10,10,10" Grid.ColumnSpan="2" />

        <Label Content="Fecha alta"  Grid.Row="5"  Grid.Column="0" Height="34" Width="110" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0" />
        <DatePicker x:Name="dpCreadoUsuario" Grid.Row="5" Grid.Column="0" Width="270" VerticalAlignment="Top" HorizontalAlignment="Left"  Margin="120,12,0,0" RenderTransformOrigin="0.644,0.501" Text="Fecha alta" SelectedDateFormat="Short" Grid.ColumnSpan="2" />

        <Label Content="Foto"  Grid.Row="6"  Grid.Column="0" Height="34" Width="110" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0,0,0" />
        <Button x:Name="btnCargarFoto" Grid.Row="6" Grid.Column="0" Content="Cargar foto" Height="30" Margin="120,10,10,8" Click="btnCargarFoto_Click" Grid.ColumnSpan="2"/>

        <!-- Foto usuario -->
        <Image x:Name="fotoUsuario"  Grid.Row="3"  Grid.Column="3"  Grid.RowSpan="4" HorizontalAlignment="Left" Height="auto" Width="auto" Margin="17,10,0,10" Source="/Images/Fotos/desconocido.png" />


        <Grid Grid.Row="6" Grid.ColumnSpan="4" Margin="0,48,0,0" Grid.RowSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button Margin="10,0,10,0" Name="btnGuardar" Content="Guardar" FontSize="18" FontWeight="Bold" Height="33" VerticalAlignment="Center" Click="btnGuardar_Click" />
            <Button Margin="10,5,10,5" Name="btnSalir" Content="Salir" Grid.Column="1" FontSize="18" FontWeight="Bold" Click="btnSalir_Click"/>
        </Grid>
    </Grid>
</Window>
