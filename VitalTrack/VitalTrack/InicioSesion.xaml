<Window x:Class="VitalTrack.InicioSesion"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VitalTrack"
        mc:Ignorable="d"
        Title="Inicio Sesion VitalTrack"   
        Height="210" 
        Width="550" 
        WindowStartupLocation="CenterScreen"
        FontSize="18" 
        FontWeight="Bold"
        Background="#ff91C4C3"
        Icon="/Images/icons8-employee-100-3.png" ResizeMode="NoResize">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Image Grid.Row="0" Grid.Column="0"  Grid.RowSpan="4" Source="Images/icons8-trees-100-12.png" />

        <Label Content="Usuario:" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0,0,0" />
        <TextBox x:Name="txtNombreUsuario" Grid.Column="1" Width="198" Height="30" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="125,0,0,0" />

        <Label Content="Contraseña:" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Left"  VerticalAlignment="Center" Margin="10,0,0,0" />
        <PasswordBox x:Name="txtContrasena" Grid.Row="1" Grid.Column="1" Width="198" Height="30" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="125,0,0,0" />


        <Button x:Name="btnIniciarSesion" Content="Iniciar sesión"  Grid.Row="3" Grid.Column="1" Width="142" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="42,6,0,0" RenderTransformOrigin="-1.4,0.506" Click="btnLogin_Click"/>
        <Button x:Name="btnSalir" Content="Salir" Grid.Row="3" Grid.Column="1" Width="137" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="206,6,0,0"  Click="btnExit_Click"/>
    </Grid>
</Window>
