<Window x:Class="VitalTrack.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VitalTrack"
        xmlns:views="clr-namespace:VitalTrack.Views" 
        xmlns:viewmodels="clr-namespace:VitalTrack.ViewModels" 
        mc:Ignorable="d"
        Title="VitalTrack"  Name="PersonalMainWindow" 
        Height="600" 
        Width="1200" 
        WindowStartupLocation="CenterScreen"
        FontSize="20" 
        FontWeight="Bold"
        Background="#ff91C4C3"
        Icon="Images/analytics_icon.png" ResizeMode="NoResize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="4*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <!-- Logo VitalTrack -->
        <Image Source="Images/icons8-trees-100-12.png" />

        <!-- Panel de datos principal -->
        <ContentControl  Grid.Row="1" Grid.Column="1" Content="{Binding}" Grid.RowSpan="9" Height="NaN" Width="NaN"/>

        <!-- Título panel datos -->
        <Label x:Name="lblNombreVentana" Grid.Column="1"   FontSize="30" Content="Nombre Ventana" HorizontalAlignment="Center" VerticalAlignment="Center"/>

        <StackPanel Grid.Row="1" Margin="0,2,0,0">
            <Button Grid.Row="1" x:Name="btnUsuarios" Width="250" Height="60" HorizontalAlignment="Left" Click="btnUsuarios_Click">
                <Grid Width="230">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                    </Grid.ColumnDefinitions>
                    <Image x:Name="UsuarioImage" HorizontalAlignment="Left" VerticalAlignment="Center" Height="auto" Width="auto" Margin="0,5,0,10" Source="Images/icons8-employee-100-6.png"/>
                    <TextBlock Text="Usuarios" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="40,12,0,0"/>
                </Grid>
            </Button>
        </StackPanel>

        <StackPanel Grid.Row="2" Margin="0,2,0,0">
            <Button Grid.Row="2" x:Name="btnRoles" Width="250" Height="60" HorizontalAlignment="Left">
                <Grid Width="230">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                    </Grid.ColumnDefinitions>
                    <Image x:Name="RolesImage" HorizontalAlignment="Left" VerticalAlignment="Center" Height="auto" Width="auto" Margin="0,5,0,15"  Source="Images/icons8-employee-100.png"/>
                    <TextBlock Text="Roles" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="54,0,0,0"/>
                </Grid>
            </Button>
        </StackPanel>

        <StackPanel Grid.Row="3" Margin="0,2,0,0">
            <Button Grid.Row="3" x:Name="btnPacientes" Width="250" Height="60" HorizontalAlignment="Left" >
                <Grid Width="230">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                    </Grid.ColumnDefinitions>
                    <Image x:Name="PacientesImage" HorizontalAlignment="Left" VerticalAlignment="Center" Height="auto" Width="auto" Margin="0,5,0,10" Source="Images/icons8-employee-100-2.png"/>
                    <TextBlock Text="Pacientes" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="30,0,0,0"/>
                </Grid>
            </Button>
        </StackPanel>

        <StackPanel Grid.Row="4" Margin="0,2,0,0">
            <Button Grid.Row="4" x:Name="btnConstantes" Width="250" Height="60" HorizontalAlignment="Left">
                <Grid Width="230">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                    </Grid.ColumnDefinitions>
                    <Image x:Name="ConstantesImage" HorizontalAlignment="Left" VerticalAlignment="Center" Height="auto" Width="auto" Margin="0,5,10,10" Source="Images/sales_icon.png"/>
                    <TextBlock Text="Constantes" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="12,12,0,0"/>
                </Grid>
            </Button>
        </StackPanel>

        <StackPanel Grid.Row="5" Margin="0,2,0,0">
            <Button Grid.Row="5" x:Name="btnGraficas" Width="250" Height="60" HorizontalAlignment="Left">
                <Grid Width="230">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                    </Grid.ColumnDefinitions>
                    <Image x:Name="GraficasImage" HorizontalAlignment="Left" VerticalAlignment="Center" Height="auto" Width="auto" Margin="0,5,0,10" Source="Images/line_chart.png"/>
                    <TextBlock Text="Gráficas" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Center" RenderTransformOrigin="1.151,0.589" Margin="36,0,0,0"/>
                </Grid>
            </Button>
        </StackPanel>

        <StackPanel Grid.Row="6" Margin="0,2,0,0">
            <Button Grid.Row="6" x:Name="btnAlertas" Width="250" Height="60" HorizontalAlignment="Left">
                <Grid Width="230">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                    </Grid.ColumnDefinitions>
                    <Image x:Name="TareaImage" HorizontalAlignment="Left" VerticalAlignment="Center" Height="auto" Width="auto" Margin="0,5,0,10" Source="Images/icons8-job-100-5.png"/>
                    <TextBlock Text="Alertas" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="41,12,0,0"/>
                </Grid>
            </Button>
        </StackPanel>

        <StackPanel Grid.Row="7" Margin="0,2,0,0">
            <Button Grid.Row="7" x:Name="btnAuditoria" Width="250" Height="60" HorizontalAlignment="Left">
                <Grid Width="230">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="35*"/>
                        <ColumnDefinition Width="53*"/>
                    </Grid.ColumnDefinitions>
                    <Image x:Name="AuditoriaImage" HorizontalAlignment="Left" VerticalAlignment="Center" Height="auto" Width="auto" Margin="0,5,0,10" Source="Images/icons8-salary-100-4.png"/>
                    <TextBlock Text="Auditoria" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.ColumnSpan="3" Margin="40,10,0,0"/>
                </Grid>
            </Button>
        </StackPanel>

        <StackPanel Grid.Row="8" Margin="0,2,0,0">
            <Button Grid.Row="8" x:Name="btnLogOut" Width="250" Height="60" HorizontalAlignment="Left">
                <Grid Width="230">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                    </Grid.ColumnDefinitions>
                    <Image x:Name="LogoutImage" HorizontalAlignment="Left" VerticalAlignment="Center" Height="auto" Width="auto" Margin="0,5,0,10"  Source="Images/icons8-exit-100-9.png"/>
                    <TextBlock Text="Cerrar sesión" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="31,10,0,0"/>
                </Grid>
            </Button>
        </StackPanel>
        <StackPanel Grid.Row="9" Margin="0,2,0,0">
            <Button Grid.Row="9" x:Name="btnCerrar" Width="250" Height="60" HorizontalAlignment="Left">
                <Grid Width="230">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                    </Grid.ColumnDefinitions>
                    <Image x:Name="CerrarImage" HorizontalAlignment="Left" VerticalAlignment="Center" Height="auto" Width="auto" Margin="0,5,0,10"  Source="Images/icons8-exit-100-4.png"/>
                    <TextBlock Text="Cerrar App" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="34,10,0,0"/>
                </Grid>
            </Button>
        </StackPanel>
    </Grid>

     <!--Data bindings--> 
    <Window.Resources>
        <DataTemplate x:Name="UsuariosTemplate" DataType="{x:Type viewmodels:UsuariosViewModel}">
            <views:PanelUsuarios>
                
            </views:PanelUsuarios>
        </DataTemplate>
    </Window.Resources>
    
    
</Window>
